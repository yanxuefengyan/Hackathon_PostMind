{
  "name": "postmind-hackathon",
  "version": "1.0.0",
  "description": "AI赋能集邮文化全场景智能互动平台",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend/web && npm run start",
    "build": "npm run build:frontend && npm run build:mobile",
    "build:frontend": "cd frontend/web && npm run build",
    "build:mobile": "cd frontend/mobile && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend/web && npm test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm install && cd frontend/web && npm install && cd ../mobile && npm install && cd ../../backend && npm install"
  },
  "keywords": [
    "AI",
    "集邮",
    "AR",
    "NFT",
    "文心大模型",
    "React",
    "FastAPI"
  ],
  "author": "PostMind Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}